<script type="text/javascript">
    function notif() {
          $.ajax({
              url: "/cakephp/messages/nombre_message",
        dataType:'html',
 
        ifModified:true,
              success: function(content){
                $('#notifications').html(content);
              }
          });
          setTimeout(notif, 10000);
      }
      notif();
  </script>
